{% extends "./base.njk" %}

{% block content %}
{% include "partials/navbar.njk" %}
<div class="container mx-auto">
	<div class="gap-8">
		<article class="article prose lg:prose-xl mx-auto">
			<h1 class="pt-5">{{ title }}</h1>
			{{ content | safe }}

			<h2>Guides</h2>
			<ul>
			{% for post in collections.guide %}
				<li><a class="italic" href="{{ post.url }}">{{ post.data.title }}</a> by {{ post.data.author }}</li>
			{% endfor %}
			</ul>

			<h2>Articles</h2>
			<ul>
			{% for post in collections.article %}
				<li><a class="italic" href="{{ post.url }}">{{ post.data.title }}</a> by {{ post.data.author }}</li>
			{% endfor %}
			</ul>
		</article>
	</div>

	{% include "partials/footer.njk" %}
</div>
{% endblock %}