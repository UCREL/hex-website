{% if back or next %}
<div class="flex justify-between">
    <div>
        {% if back %}
        <a class="btn no-underline" href={{ back.url }}>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" /></svg>
            {{ back.text or "Back" }}
        </a>
        {% endif %}
    </div>
    <div>
        {% if next %}
        <a class="btn no-underline" href={{ next.url }}>
            {{ next.text or "Next" }}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>
        </a>
        {% endif %}
    </div>
</div>
{% endif %}